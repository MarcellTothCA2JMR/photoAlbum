@model KepRendszerezo.Models.Folder
<br />
<br />


<div class="text-center">
    <table border="1">


        @foreach (Folder fd in ViewBag.Adatb)
        {
            string[] ContentPersons = fd.People.Split(", ");
            bool acceptable = true;
            foreach (string person in ViewBag.FilterPers)
            {
                if (!ContentPersons.Contains(person))
                {
                    acceptable = false;
                    break;
                }
            }


            if (fd.Location == ViewBag.FilterLocat || ViewBag.FilterLocat == "Mind")
            {
                if (acceptable || ViewBag.EmptyNames)
                {
                    <tr height="300px" style="background-color:@fd.Colour">
                        <td width="200px">@fd.Name</td>
                        <td>@fd.Date.ToShortDateString()</td>
                        <td>@Html.ActionLink("Mappa megnyitása", "display", "foldercontent", new { azon = fd.Id })</td>
                        <td>@Html.ActionLink("Mappa adatainak módosítása", "modify", "foldercontent", new { azon = fd.Id })</td>
                        <td>@Html.ActionLink("Mappa törlése", "delete", "foldercontent", new { azon = fd.Id })</td>
                    </tr>
                }

            }
        }
    </table>

</div>

<br />
