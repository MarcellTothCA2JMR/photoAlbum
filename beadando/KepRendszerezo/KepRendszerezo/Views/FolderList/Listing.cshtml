@using (Html.BeginForm("AddNewFolder", "FolderList", FormMethod.Post))
{

    <label>Új mappa hozzáadása:</label>
    <br />
    <label>Mappa neve:</label>
    @Html.TextBoxFor(m => m.Name, new { required="required"})
    <br />
    <label>Dátum:</label>
    @Html.EditorFor(m => m.Date)
    <br />
    <label>Személyek:</label>
    @Html.TextBoxFor(m => m.People, new { required = "required" })
    <br />
    <label>Helyszín:</label>
    @Html.TextBoxFor(m => m.Location, new { required = "required" })
    <br />
    <label>Mappa színe:</label>
    <input type="color" name="szin" />
    <br />
    <input type="submit" value="Új mappa létrehozása">
    <br />
    <br />
    <br />
}

